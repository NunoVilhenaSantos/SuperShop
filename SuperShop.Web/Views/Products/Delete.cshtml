@model SuperShop.Web.Data.Entities.Product


@{
    ViewData["Title"] = "Delete";
}


<br/>
<h1>@ViewData["Title"] </h1>


<br/>
<h4>Product</h4>
<br/>
<hr/>


<h3>Are you sure you want to delete this?</h3>
@* <hr/> *@


<div class="container-fluid">

    <div class="row">

        <partial name="_ProductsImages"/>

        <div class="col">
            <partial name="_ProductsDeleteDetails"/>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id"/>
                @* <input type="submit" value="Delete" class="btn btn-danger"/> *@

                @* <button type="button" class="btn btn-danger"> *@
                @*     <i class="material-symbols-outlined">delete</i> *@
                @*     <input type="submit" value="Delete" class="btn btn-danger"/> *@
                @* </button> *@
                <button type="submit" value="Delete" class="btn btn-danger">
                    @* <i class="material-symbols-outlined">delete</i> *@
                    <span class="material-symbols-outlined">delete</span>Delete
                </button>

                <button type="submit" value="Delete" class="btn btn-outline-danger">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-trash" viewBox="0 0 24 24">
                        <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6Z"></path>
                        <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1ZM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118ZM2.5 3h11V2h-11v1Z"></path>
                    </svg>
                    Delete
                </button>


                <a asp-action="Index" class="btn btn-secondary">
                    <i class="material-symbols-outlined">chevron_left</i>Back to List
                </a>
            </form>

        </div>

    </div>

</div>


<!-- Script para chamar o modal geral de Erros de BD -->
<!-- Modal -->

@section Scripts {
    <script>
        $(function () {
            @if (TempData["DbUpdateException"] != null)
            {
                <text>
                    $('#errorStaticBackdrop').modal('show');
                </text>
            }
        });
    </script>
}