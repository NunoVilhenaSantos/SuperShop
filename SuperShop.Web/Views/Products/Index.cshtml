@model IEnumerable<SuperShop.Web.Data.Entities.Product>
@* @model IEnumerable<SuperShop.Web.Models.ProductViewModel>  *@

@{
    ViewData["Title"] = "Products List";
}

<br/>
<h1>@ViewData["Title"]</h1>

<br/>
<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<br/>

<div class="table-responsive-sm">
    <table class="table table-sm table-hover">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.ImageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageId)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.LastPurchase)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastSale)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsAvailable)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stock)
            </th>
            <th></th>
        </tr>
        </thead>

        <tbody class="table-group-divider">
        @if (Model == null || !Model.Any())
        {
            <p>Não há produtos disponíveis.</p>
            <p>O tipo do modelo é: @Model.GetType().FullName</p>
        }
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>

                <td>
                    <img src="@Url.Content(item.ImageFullUrl)"
                         class="img-thumbnail" width="150" height="150" alt="Image"/>
                </td>
                <td>
                    <img src="@Url.Content(item.ImageIdFullUrl)"
                         class="img-thumbnail" width="150" height="150" alt="Image"/>
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.LastPurchase)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastSale)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsAvailable)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Stock)
                </td>
                <td>
                    <a asp-area="" asp-controller="Products" asp-action="Edit" asp-route-id="@item.Id"
                       class="btn btn-warning">
                        <span class="material-symbols-outlined">edit</span>Edit
                    </a>
                    <a asp-area="" asp-controller="Products" asp-action="Details" asp-route-id="@item.Id"
                       class="btn btn-info">
                        <span class="material-symbols-outlined">info</span>Details
                    </a>
                    <a asp-area="" asp-controller="Products" asp-action="Delete" asp-route-id="@item.Id"
                       class="btn btn-danger">
                        <span class="material-symbols-outlined">delete</span>Delete
                    </a>
                </td>
            </tr>
        }
        </tbody>

    </table>

</div>

<br/>