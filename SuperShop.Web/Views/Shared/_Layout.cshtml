@using System.Diagnostics
<!doctype html>


<html lang="pt" data-bs-theme="dark">


<head>
    <meta charset="utf-8">

    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>@ViewData["Title"] - SuperShop.Web</title>


    <link crossorigin="anonymous"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
          integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
          rel="stylesheet">

    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/> *@
    @* <link rel="stylesheet" href="~/lib/font-awesome/css/fontawesome.min.css"/> *@
    @* <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet"/> *@

    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200"
          rel="stylesheet"/>

    <link href="~/css/site.css" rel="stylesheet"/>

</head>

<body>

<header>

    <nav class="navbar navbar-expand-lg bg-body-tertiary nav-tabs">

        <div class="container-fluid">

            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">@ViewData["Title"]</a>

            @* <div class="collapse navbar-collapse" id="navbarNavAltMarkup"> *@
            @*     <div class="navbar-nav"> *@
            @*         <a class="nav-link active" aria-current="page" href="#">Home</a>  *@
            @*         <a class="nav-link" href="#">Features</a>  *@
            @*         <a class="nav-link" href="#">Pricing</a>   *@
            @*         <a class="nav-link disabled">Disabled</a>  *@
            @*         <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a> *@
            @*         <a class="nav-link" asp-area="" asp-controller="Home" asp-action="About">About</a> *@
            @*         <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a> *@
            @*         <a class="nav-link" asp-area="" asp-controller="Products" asp-action="Index">Products</a> *@
            @*     </div> *@
            @* </div> *@

            @{
                var currentController = ViewContext.RouteData.Values["controller"] as string;
                var currentAction = ViewContext.RouteData.Values["action"] as string;
            }
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">

                <div class="navbar-nav">

                    <a class="nav-link @(currentAction == "Index" && currentController == "Home" ? "active" : "")"
                       asp-area="" asp-controller="Home" asp-action="Index">
                        <i class="bi bi-house"></i>
                        @* <i class="material-symbols-outlined">home</i> *@
                        Home
                    </a>
                    <a class="nav-link @(currentAction == "About" && currentController == "Home" ? "active" : "")"
                       asp-area="" asp-controller="Home" asp-action="About">
                        @* <i class="material-symbols-outlined">home</i> *@
                        About
                    </a>
                    <a class="nav-link @(currentAction == "Privacy" && currentController == "Home" ? "active" : "")"
                       asp-area="" asp-controller="Home" asp-action="Privacy">
                        <i class="material-symbols-outlined">privacy_tip</i>
                        Privacy
                    </a>

                    <a class="nav-link @(currentController == "Products" ? "active" : "")"
                       asp-area="" asp-controller="Products" asp-action="Index">
                        <span class="material-symbols-outlined">shopping_cart</span>
                        <i class="bi bi-bag"></i>
                        Products
                    </a>

                    @* Verifica se o User está autenticado e se é o Admin!! *@
                    @* cria um dropdown com as opções de Users e Roles *@
                    @{
                        Debug.Assert(User.Identity != null, "User.Identity != null");
                    }
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <div class="dropdown">
                            @* <span class="material-symbols-outlined">settings</span> *@
                            <a class="nav-link dropdown-toggle" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="material-symbols-outlined">admin_panel_settings</i>
                                Admin
                            </a>

                            <ul class="dropdown-menu">
                                @* <span class="material-symbols-outlined">expand_more</span> *@
                                <li>
                                    <a class="dropdown-item" href="#">Action</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="#">Another action</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="#">Something else here</a>
                                </li>
                                <li>
                                    <hr class="dropdown-divider">
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="" asp-action="">
                                        <i class="bi bi-person-fill"></i>
                                        <span class="material-symbols-outlined">person</span>Users
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="" asp-action="">
                                        <i class="bi bi-people-fill"></i>
                                        <i class="material-symbols-outlined">group</i>Roles
                                    </a>
                                </li>
                            </ul>
                        </div>
                    }
                </div>
            </div>


            <div class="d-flex ms-auto">

                <div class="navbar-nav">
                    @* <a class="nav-link active" aria-current="page" href="#">Home</a> *@
                    @* <a class="nav-link" href="#">Features</a> *@
                    @* <a class="nav-link" href="#">Pricing</a> *@
                    @* <a class="nav-link disabled">Disabled</a> *@

                    @{
                        Debug.Assert(User.Identity != null, "User.Identity != null");
                    }
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a class="nav-link" asp-area="" asp-controller="Account" asp-action="ChangeUser">
                            <span class="material-symbols-outlined">settings_account_box</span>@User.Identity?.Name
                        </a>

                        <a class="nav-link" asp-area="" asp-controller="Account" asp-action="LogOut">
                            <span class="material-symbols-outlined">logout</span>Logout
                        </a>
                    }
                    else
                    {
                        <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Register">
                            <span class="material-symbols-outlined">person_add</span>Register
                        </a>
                        <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Login">
                            <span class="material-symbols-outlined">login</span>Login
                        </a>
                    }
                </div>

                <div class="form-check form-switch me-2">
                    <div class="d-flex flex-column">
                        <input class="form-check-input order-1 align-self-center" type="checkbox" id="darkModeSwitch">
                        <label class="form-check-label order-2 align-self-center" for="darkModeSwitch">Dark Mode</label>
                    </div>
                </div>

                <div class="d-flex flex-column">
                    <partial name="_LoginPartial"/>
                </div>

                <button class="navbar-toggler ms-auto" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarNavAltMarkup"
                        aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

            </div>

        </div>

    </nav>

</header>


@* <br/> *@
<br/>
<br/>

<div class="container-fluid justify-content-center">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>


@* <br/> *@
<br/>
<br/>


<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2023 - @ViewData["Title"] -
        <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>


<script src="~/js/site.js" asp-append-version="true"></script>


