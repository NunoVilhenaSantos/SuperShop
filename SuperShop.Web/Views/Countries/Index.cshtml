@* @model System.Linq.IQueryable<SuperShop.Web.Data.Entities.Country> *@
@* @model System.Linq.EnumerableQuery<SuperShop.Web.Data.Entities.Country> *@
@* @model System.Linq.IOrderedEnumerable<SuperShop.Web.Data.Entities.Country> *@
@model IEnumerable<SuperShop.Web.Data.Entities.Country>


@{
    ViewData["Title"] = "List - Countries";
    Layout = "_Layout";
}


<h2>@ViewData["Title"]</h2>


<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>


<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.NumberCities)
        </th>

        <th></th>
    </tr>
    </thead>

    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.NumberCities)
            </td>

            <td id="@item.Id">

                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a>

                <!-- Button trigger modal "#deleteCountry" -->
                <a asp-action="Delete" asp-route-id="@item.Id"
                   type="button" class="btn btn-danger" id="btnDeleteCountry"
                   data-bs-toggle="modal" data-bs-target="#deleteCountry">
                    Delete
                </a>

            </td>
        </tr>
    }
    </tbody>
</table>



<partial name="_CountriesModal"/>


@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="~/js/Countries.js"></script>
}